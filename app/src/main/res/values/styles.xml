<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BackgroundColor1</item>
        <item name="colorPrimaryDark">@color/BackgroundColor1</item>
        <item name="colorAccent">@color/FontColor</item>

    </style>
    <!-- General Default Text. -->
    <style name="DefaultText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/BackgroundColor</item>
        <item name="colorPrimaryDark">@color/BackgroundColor</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/BackgroundColor</item>
        <item name="colorPrimaryDark">@color/BackgroundColor</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="LoginTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>