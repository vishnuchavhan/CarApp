<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_spacing"
        android:background="@drawable/rounded_corner2"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_view_username"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="user name" />

        <TextView
            android:id="@+id/text_view_userphone"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="user phone number" />

        <TextView
            android:id="@+id/carTypeT"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR TYPE" />

        <TextView
            android:id="@+id/text_view_car_occasion_item"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR OCCASION" />

        <TextView
            android:id="@+id/text_view_car_price_item"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/border"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR PRICE / HOUR" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_date_from"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_date_to"/>

        </LinearLayout>

