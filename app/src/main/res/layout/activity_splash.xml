<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    tools:context=".UserAuthentication.SplashActivity">

    <ImageView
        android:id="@+id/splash_image_view_logo"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/car_back"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-260dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/descriptionView"
        style="@style/DefaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/titleView"
        android:includeFontPadding="false"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:layout_marginTop="20dp"
        android:text="@string/app_description" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_image_view_logo"
        android:fontFamily="@font/poppins_bold"
        android:text="Premium cars.\nEnjoy your journey."
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginTop="-20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:transitionName="logo_text" />

