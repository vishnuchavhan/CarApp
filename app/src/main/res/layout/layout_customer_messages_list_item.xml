<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/layout_customer_subject_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.03"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_view_customer_message_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing="0.03"
                android:layout_marginStart="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Message Subject" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_customer_body_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_customer_subject_container"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.03"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_view_customer_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing="0.03"
                android:layout_marginStart="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Message body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_customer_body_container"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/response"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.03"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/text_view_customer_message_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/FontColor"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing="0.03"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginStart="8dp"
                android:includeFontPadding="false"
                tools:text="Message Response" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
